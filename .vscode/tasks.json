{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build MoneroMiner",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\build.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "MoneroMiner.sln",
        "/t:Clean",
        "/p:Configuration=Release",
        "/p:Platform=x64"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
